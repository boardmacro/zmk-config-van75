#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
  keymap {
    compatible = "zmk,keymap";

    default_layer {
  bindings = <&kp Z &kp Y &kp X &tog 1>;
  sensor-bindings = <
    &inc_dec_kp PG_UP PG_DN
    &inc_dec_kp LEFT RIGHT
    &inc_dec_kp UP DOWN
  >;
};

    layer_1 {
      bindings = <&kp A &kp B &kp C &tog 2>;
    };

    layer_2 {
      bindings = <&kp 1 &kp 2 &kp 3 &to 0>;
    };
  };
};
